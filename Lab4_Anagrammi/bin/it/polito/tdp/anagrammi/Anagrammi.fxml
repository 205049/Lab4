<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.anagrammi.AnagrammiController">
   <top>
      <Label text="Lab 04" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <TextField fx:id="txtParola" promptText="Inserisci parola..." />
                  <Button mnemonicParsing="false" onAction="#doCalcola" text="Calcola anagrammi" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextFlow fx:id="txtFlow" prefHeight="200.0" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT">
               <children>
                  <Button mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
